<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="LazuriteMobile.App.Switches.ImageView"
    HeightRequest="110"
    WidthRequest="110"
    VerticalOptions="Start" 
    xmlns:common="clr-namespace:LazuriteMobile.App.Common"
    xmlns:local="clr-namespace:LazuriteMobile.App.Switches"
    BackgroundColor="#1D191D"
    Opacity="{Binding IsAvailable, Converter={Static local:ConvertersStatic.BoolToDouble}}"
    IsEnabled="{Binding AllowClick}"
    HorizontalOptions="Start">
    <Label FontSize="Small" TextColor="Gray" Text="[Изображение]" VerticalOptions="Center" HorizontalOptions="Center"></Label>
</ContentView>
