<UserControl x:Class="LazuriteUI.Windows.Main.Constructors.Decomposition.CheckerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LazuriteUI.Windows.Main.Constructors.Decomposition"
             xmlns:controls="clr-namespace:LazuriteUI.Windows.Controls;assembly=LazuriteUI.Windows.Controls"
             xmlns:switches="clr-namespace:LazuriteUI.Windows.Main.Switches"
             mc:Ignorable="d" 
             Height="30"
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             Background="#005544"
             d:DesignHeight="300">
    <Grid>
        <Grid.Resources>
            <local:StringToVisibility x:Key="stringToVisibility"></local:StringToVisibility>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <controls:IconView Icon="{Binding Icon}" Visibility="{Binding ActionIconVisibility}"></controls:IconView>
        <Label Grid.Column="1" Foreground="White" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Content="{Binding ActionName}"></Label>
        <Label Grid.Column="2" Foreground="White" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Background="#004040" Content="{Binding ActionCaption}" Visibility="{Binding ActionCaption, Converter={StaticResource stringToVisibility}}"></Label>
        <local:EditActionButtonsView x:Name="buttons" EditVisible="{Binding IsSupportsModification}" AddVisible="False" RemoveVisible="False" Grid.Column="3"></local:EditActionButtonsView>
    </Grid>
</UserControl>
