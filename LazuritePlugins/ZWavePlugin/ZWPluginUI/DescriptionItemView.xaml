<Grid x:Class="ZWPluginUI.DescriptionItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZWPluginUI"
             xmlns:controls="clr-namespace:LazuriteUI.Windows.Controls;assembly=LazuriteUI.Windows.Controls"
             mc:Ignorable="d" 
             VerticalAlignment="Top"
             HorizontalAlignment="Stretch"
             Width="340"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid.RowDefinitions>
        <RowDefinition Height="30"></RowDefinition>
        <RowDefinition></RowDefinition>
    </Grid.RowDefinitions>
    <Label x:Name="lblCaption" Background="#222222" Foreground="SteelBlue" VerticalContentAlignment="Center">Заголовок</Label>
    <TextBox Width="350" TextWrapping="Wrap" Height="Auto" TextAlignment="Left" Background="Transparent" IsReadOnly="True" BorderThickness="0" Grid.Row="1" Padding="10" Foreground="Gray" x:Name="tbText">Описание</TextBox>
</Grid>
