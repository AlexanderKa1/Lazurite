<Grid x:Class="LazuriteUI.Windows.Main.Statistics.Views.StatisticsTableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LazuriteUI.Windows.Main.Statistics.Views"
             xmlns:controls="clr-namespace:LazuriteUI.Windows.Controls;assembly=LazuriteUI.Windows.Controls"
             xmlns:sf="http://schemas.syncfusion.com/wpf"
             xmlns:global="clr-namespace:System.Globalization;assembly=mscorlib"
             Background="{x:Static controls:Visual.Background}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <sf:SfDataGrid x:Name="dataGrid" ShowGroupDropArea="True" AllowSorting="True" AllowDraggingColumns="True" AllowResizingColumns="True" sf:SkinStorage.VisualStyle="Office2010Blue" AllowFiltering="True" AllowGrouping="True">
        <sf:SfDataGrid.Columns>
            <sf:GridTextColumn AllowEditing="False" HeaderText="СЦЕНАРИЙ" MappingName="ScenarioName"></sf:GridTextColumn>
            <sf:GridDateTimeColumn AllowEditing="False" Pattern="LongDate" AllowDragging="True" HeaderText="ДАТА" MappingName="DateTime">
                <sf:GridDateTimeColumn.DateTimeFormat>
                    <global:DateTimeFormatInfo LongDatePattern="dd.MM.yyyy hh:mm:ss" />
                </sf:GridDateTimeColumn.DateTimeFormat>
            </sf:GridDateTimeColumn>
            <sf:GridTextColumn AllowEditing="False" HeaderText="ЗНАЧЕНИЕ" MappingName="Value"></sf:GridTextColumn>
            <sf:GridTextColumn AllowEditing="False" HeaderText="ПОЛЬЗОВАТЕЛЬ" MappingName="UserName"></sf:GridTextColumn>
            <sf:GridTextColumn AllowEditing="False" HeaderText="ИСТОЧНИК" MappingName="SourceType"></sf:GridTextColumn>
        </sf:SfDataGrid.Columns>
    </sf:SfDataGrid>
    <sf:SkinPicker VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="60"/>
</Grid>
